<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>onebusaway</artifactId>
    <groupId>org.onebusaway</groupId>
    <version>1.1.1</version>
  </parent>
  <groupId>org.onebusaway</groupId>
  <artifactId>onebusaway-siri-apis</artifactId>
  <version>1.0.1</version>
  <packaging>pom</packaging>

  <name>onebusaway-siri-apis</name>
  <description>Parent POM module for onebusaway siri api modules</description>

  <properties>
    <!-- These modules aren't really meant for widespread distribution, so we deploy to OneBusAway Nexus by default -->
    <distribution_id>nexus.onebusaway.org-releases</distribution_id>
    <distribution_url>http://nexus.onebusaway.org/content/repositories/releases/</distribution_url>
    <snapshot_distribution_id>nexus.onebusaway.org-snapshots</snapshot_distribution_id>
    <snapshot_distribution_url>http://nexus.onebusaway.org/content/repositories/snapshots/</snapshot_distribution_url>
  </properties>

  <scm>
    <connection>scm:svn:http://onebusaway.googlecode.com/svn/siri/onebusaway-siri-apis/tags/onebusaway-siri-apis-1.0.1</connection>
    <developerConnection>scm:svn:https://onebusaway.googlecode.com/svn/siri/onebusaway-siri-apis/tags/onebusaway-siri-apis-1.0.1</developerConnection>
    <url>http://code.google.com/p/onebusaway/source/browse/#svn/siri/onebusaway-siri-apis/tags/onebusaway-siri-apis-1.0.1</url>
  </scm>

  <distributionManagement>
    <!-- Even though we specify this in the parent pom, we need to specify it here to have full control over the url -->
    <site>
      <id>${site_id}</id>
      <url>${site_url}</url>
    </site>
  </distributionManagement>

  <repositories>
    <repository>
      <id>public.onebusaway.org</id>
      <url>http://nexus.onebusaway.org/content/groups/public/</url>
    </repository>
  </repositories>

</project>
